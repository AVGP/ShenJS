{
    "source": "./source",
    "destination": "./_site",
    "metadata": {
        "site": {
            "name": "ShenJS",
            "description": "2015 JS Conference in China",
            "url": "http://2015.jsconf.cn",
            "author": "Wiredcraft",
            "email": "info@wiredcraft.com",
            "keywords": [
                "Javascript",
                "Node.js",
                "realtime",
                "JSconf",
                "Shenzhen",
                "China",
                "conference"
            ],
            "gauges": "54ee7d005dd053560400c9bd"
        }
    },
    "metalsmith": {
        "metalsmith-markdown": {
            "xhtml": true
        },
        "metalsmith-include": {},
        "metalsmith-drafts": {},
        "metalsmith-build-date": true,
        "metalsmith-collections": {},
        "metalsmith-excerpts": true,
        "metalsmith-permalinks": {},
        "metalsmith-templates": {
            "engine": "swig",
            "cache": false,
            "default": "default.html",
            "directory": "./templates"
        },
        "metalsmith-assets": null
    },
    "assets": {
        "vendor": {
            "js": [
                "bower_components/jquery/dist/jquery.js",
                "bower_components/highlightjs/highlight.pack.js",
                "bower_components/parallax/deploy/jquery.parallax.js"
            ],
            "css": [
                "bower_components/highlightjs/styles/github.css"
            ]
        },
        "custom": {
            "js": [
                "js/*.js"
            ],
            "scss": [
                "scss/**/*.{scss,sass}"
            ]
        }
    }
}
